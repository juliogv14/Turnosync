<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textColorError">?attr/colorError</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/colorPrimary</item>


    </style>

    <style name="AppTheme.LoginOptionsMenu">
        <item name="android:actionBarItemBackground">@drawable/layout_login_register</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="CustomToggle1" parent="@android:style/Widget.Material.Light.Button.Toggle">
        <item name="android:colorButtonNormal">@color/customToggle1</item>
    </style>
    <style name="CustomToggle2" parent="@android:style/Widget.Material.Light.Button.Toggle">
        <item name="android:colorButtonNormal">@color/customToggle2</item>
    </style>
    <style name="CustomToggle3" parent="@android:style/Widget.Material.Light.Button.Toggle">
        <item name="android:colorButtonNormal">@color/customToggle3</item>
    </style>
    <style name="CustomToggle4" parent="@android:style/Widget.Material.Light.Button.Toggle">
        <item name="android:colorButtonNormal">@color/customToggle4</item>
    </style>
    <style name="CustomToggle5" parent="@android:style/Widget.Material.Light.Button.Toggle">
        <item name="android:colorButtonNormal">@color/customToggle5</item>
    </style>
    <style name="CustomToggle6" parent="@android:style/Widget.Material.Light.Button.Toggle">
        <item name="android:colorButtonNormal">@color/customToggle6</item>
    </style>

</resources>
