<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <!--TODO set background-->
        <LinearLayout
            android:id="@+id/header_linear"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_drawer_height"
            android:orientation="vertical"
            android:padding="@dimen/header_drawer_left_padding"
            android:background="#33002256"
            android:gravity="bottom">


            <ImageView
                android:id="@+id/imageView_profile"
                android:layout_width="@dimen/header_drawer_imageview"
                android:layout_height="@dimen/header_drawer_imageview"
                app:srcCompat="@mipmap/ic_launcher_round"
                tools:background="@color/colorAccent" />

            <TextView
                android:id="@+id/textView_display_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                tools:text="Nombre del usuario" />

            <TextView
                android:id="@+id/textView_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="usuario@email.com" />

        </LinearLayout>
</layout>