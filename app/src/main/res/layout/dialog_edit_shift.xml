<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView_editShift_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/dialog_editShift_user"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spinner_editShift_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            style="@android:style/Widget.Holo.Light.Spinner"
            app:layout_constraintBottom_toBottomOf="@+id/textView_editShift_user"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView_editShift_user"
            app:layout_constraintTop_toTopOf="@+id/textView_editShift_user" />

        <TextView
            android:id="@+id/textView_editShift_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/dialog_createShift_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner_editShift_user" />

        <Spinner
            android:id="@+id/spinner_editShift_type"
            style="@android:style/Widget.Holo.Light.Spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView_editShift_type"
            app:layout_constraintEnd_toStartOf="@+id/textView_editShift_tag"
            app:layout_constraintStart_toEndOf="@+id/textView_editShift_type"
            app:layout_constraintTop_toTopOf="@+id/textView_editShift_type" />

        <TextView
            android:id="@+id/textView_editShift_tag"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/spinner_editShift_type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/spinner_editShift_type" />

    </android.support.constraint.ConstraintLayout>
</layout>